@model Entities.Coach

@{
    ViewData["Title"] = "Edit";
}



<div class="row">
    <!-- left column -->
    <div class="col-md-12 mt-1">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header bg-dark">
                <h3 class="card-title">Entraineur</h3>
            </div>
            <form asp-action="Edit">
                <input type="hidden" asp-for="Person_Id" />
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Ref"></label>
                                <input asp-for="Ref" placeholder="Enter your Ref" class="form-control" />
                                <span asp-validation-for="Ref" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Telephone"></label>
                                <input type="tel" asp-for="Telephone" placeholder="Enter your number phone" class="form-control" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Last_Name">Nom</label>
                                <input asp-for="Last_Name" placeholder="Enter your Last name" class="form-control" />
                                <span asp-validation-for="Last_Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="First_Name">Prénom</label>
                                <input asp-for="First_Name" placeholder="Enter your First name" class="form-control" />
                                <span asp-validation-for="First_Name" class="text-danger"></span>
                            </div>
                        </div>



                    </div>
                </div>
         






                <!--Submit btn -->
                <div class="card-footer text-center">
                    <button type="submit" value="Create" class="btn btn-success" title="Enregistrer"><i class="fas fa-save"></i></button>
                </div>

            </form>







        </div>

    </div>
</div>






