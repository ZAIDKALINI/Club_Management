@model Entities.CustomerPayement

                            <input type="hidden" asp-for="Id" />
                            <!--ForCreatedBy-->
                            <partial name="BasesEntity/_BaseEntity" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-6">

                                    <img class="img-fluid profile-user-img rounded-circle" src="~/images/People/@ViewBag.Person_Image" />
                                    <p class="lead">@ViewBag.Person_Name</p>
                                </div>
                                <input type="hidden" asp-for="Person_Id" value="@ViewBag.Person_Id" />

                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <!---->
                                    <label asp-for="Ref" class="control-label"></label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend ">
                                            <button type="button" id="btnRef" class="btn btn-secondary"><i class="fas fa-random"></i></button>
                                        </div>
                                        <!-- /btn-group -->
                                        <input type="text" asp-for="Ref" class="form-control " id="txtRef" readonly>
                                    </div>
                                    <span asp-validation-for="Ref" class="text-danger"></span>
                                    <!---->


                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Payement_date" class="control-label "></label>
                                        <input type="date" asp-for="Payement_date" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label"></label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="duration" class="control-label "></label>
                                        <input type="number" asp-for="duration" min="1" id="txtDure" class="form-control" required />
                                        <span asp-validation-for="duration" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>



                          
                      

