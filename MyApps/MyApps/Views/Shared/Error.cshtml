
@if (ViewBag.ErrorTitle == null)
{
    <div class="error-page">
        <h2 class="headline text-danger">500</h2>

        <div class="error-content">
            <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops!Quelque chose a mal tourné.</h3>

            <p>
                Nous allons tout de suite résoudre ce problème.
                En attendant, vous pouvez <a asp-action="index" asp-controller="statistics">retourner à dashboard</a>.
                n'oubliez pas de contactez nous'
            </p>


        </div>
    </div>
}
else
{
<div class="error-page">

    <h2 class="error-page text-danger">@ViewBag.ErrorTitle</h2>

    <div class="error-content">
        <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops!</h3>

        <p>

            @ViewBag.ErrorMessage <a asp-action="index" asp-controller="statistics">retourner à dashboard</a>.

        </p>


    </div>
</div>
        }
        <!-- /.error-page -->
