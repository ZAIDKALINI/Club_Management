@model IEnumerable<Entities.Customer>

@{
    ViewData["Title"] = "Find";
    Layout = null;
}


<div class="table-responsive">
    <table id="example2" class="table table-hover table-bordered  text-center">
        <thead class="bg-dark">
            <tr>

                <th>
                    @Html.DisplayName("Name")
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>
                    @Html.DisplayName("Date inscrption")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.First_Name)  @Html.DisplayFor(modelItem => item.Last_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateInscri)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Person_Id" class="btn bg-success btn-sm"><i class="fa fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Person_Id" class="btn bg-info btn-sm"><i class="fa fa-info"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Person_Id" class="btn bg-danger btn-sm"><i class="fa fa-trash"> </i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    </div>
