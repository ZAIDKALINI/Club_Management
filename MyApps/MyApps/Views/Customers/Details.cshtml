@model IEnumerable<Entities.CustomerPayement>









<div class="col-12">
    <div class="card ">
        <div class="card-header bg-dark">
            <h3 class="card-title">Les payements des clients</h3>
            <a asp-action="Create" class="btn btn-info float-right" title="Ajouter nouveau payement"><i class="fas fa-user-plus"></i></a>
        </div>
        <table id="example2" class="table table-hover table-bordered  text-center">
            <thead class="bg-dark">
                <tr>
                    <th>
                        @Html.DisplayName("Name")
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Payement_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.customer.First_Name) @Html.DisplayFor(modelItem => item.customer.Last_Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payement_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            <a asp-controller="CustomersPayement" asp-action="Edit" asp-route-id="@item.Id" class="btn bg-success btn-sm"><i class="fa fa-edit"></i></a> 

                            <a asp-controller="CustomersPayement" asp-action="Delete" asp-route-id="@item.Id" class="btn bg-danger btn-sm"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    <!---->


                }

            </tbody>
        </table>
    </div>
</div>
