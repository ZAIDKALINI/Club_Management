
@model UserCustomerViewModel

    <div class="card card-primary">
        <div class="card-header bg-secondary">
            <h3 class="card-title">Effactuer le payment</h3>
        </div>
        <div class="row text-center">
            <div class="col-md-12">
                <!--Card body-->
                <form method="post">
                    <div class="card-body d-flex bd-highlight">
                        <div class="p-2 flex-fill bd-highlight">
                            <div class="form-group row ">
                                <label asp-for="Person_Id" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Person_Id" type="hidden" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Last_Name" disabled class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Last_Name" disabled class="form-control">
                                    <span asp-validation-for="Last_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="First_Name" disabled class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="First_Name" disabled class="form-control">
                                    <span asp-validation-for="First_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Telephone" disabled class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Telephone" disabled class="form-control">
                                    <span asp-validation-for="Telephone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="p-2 flex-fill bd-highlight text-center">
                            <div class="col-12 ">
                                <img src="../../dist/img/user2-160x160.jpg" alt="" class="img-thumbnail img-fluid">
                            </div>
                        </div>


                    </div>
                    <div class="card-footer text-center">
                        <div class="input-group mb-3">
                            <input type="text" asp-for="userName" class="form-control " placeholder="Affecter un nouveau utulisateur pour client">
                            <div class="input-group-append ">

                                <button type="submit" class="btn btn-info">Ajouter</button>
                            </div>


                        </div>
                        <!-- /btn-group -->
                       
                    </div>
                </form>
            </div>

           
        </div>
        
    </div>


