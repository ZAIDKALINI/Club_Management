
@model UserCustomerViewModel

    <div class="card card-primary">
        <div class="card-header bg-dark">
            <h3 class="card-title">Affecter le manager</h3>
        </div>
        <div class="row text-center">
            <div class="col-md-12">
                <!--Card body-->
                <form method="post">
                    <div class="card-body d-flex bd-highlight">
                        <div class="p-2 flex-fill bd-highlight">

                            <input asp-for="Person_Id" type="hidden" class="form-control">


                            <div class="form-group row">
                                <label asp-for="Last_Name" disabled class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Last_Name" disabled class="form-control">
                                    <span asp-validation-for="Last_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="First_Name" disabled class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="First_Name" disabled class="form-control">
                                    <span asp-validation-for="First_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Telephone" disabled class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Telephone" disabled class="form-control">
                                    <span asp-validation-for="Telephone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="p-2 flex-fill bd-highlight text-right">
                            <div class="col-12 ">
                                @{
                                    string path = "";
                                    if (Model != null)
                                        path = Model.image ?? "Default.jpg";
                                }
                                <img src="~/images/People/@path" alt="" class="img-circle profile-user-img img-fluid">
                            </div>
                        </div>


                    </div>
                    <div class="card-footer text-center">
                        <div class="input-group mb-3">
                            <input type="text" asp-for="userName" class="form-control " placeholder="Affecter un nouveau utulisateur pour client">
                            <div class="input-group-append ">

                                <button type="submit" class="btn btn-info">Ajouter</button>
                            </div>


                        </div>
                        <!-- /btn-group -->

                    </div>
                </form>
                <!--Rmove user for customer-->
                <form asp-action="DeleteUserCustomer" asp-route-id="@Model.Person_Id"method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3>User Roles</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.userName.Any())
                            {

                               
                                <h5 class="card-title">@Model.userName</h5>

                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </form>
                  
               
            </div>

           
        </div>
        
    </div>


