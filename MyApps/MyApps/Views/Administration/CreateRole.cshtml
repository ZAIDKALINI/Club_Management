

@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12 mt-1">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header bg-dark">
                <h3 class="card-title">Role</h3>
            </div>


            <div class="container">
                <div class="row mr-3">
                    <div class="col-md-12">
                        <form asp-action="CreateRole" method="post" class="mt-3">
                            <div asp-validation-summary="All" class="text-danger">
                            </div>
                            <div class="form-group row text-center">
                                <label asp-for="RoleName" class="col-form-label ml-3"></label>
                                <div class="col-sm-10">
                                    <input asp-for="RoleName" class="form-control" placeholder="Name">
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10">

                                </div>
                            </div>




                            <!--Submit btn -->
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-primary" style="width:auto">
                                    Create Role
                                </button>
                            </div>




                        </form>
                    </div>



                </div>
            </div>




        </div>

    </div>
</div>

