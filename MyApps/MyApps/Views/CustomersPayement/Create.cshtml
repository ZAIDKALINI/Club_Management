@model Entities.CustomerPayement

<br />

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header bg-dark">
                <h3 class="card-title">Effactuer le payment</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Reference de payement:</label>
                                        <input asp-for="Ref" class="form-control" />
                                        <span asp-validation-for="Ref" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Client:</label>
                                        @Html.DropDownList("Person_Id", null, htmlAttributes: new { @class = "form-control select2" })
                                        <span asp-validation-for="Person_Id" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Prix:</label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label ">Date de payment:</label>
                                        <input type="date" asp-for="Payement_date" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label ">dure:</label>
                                        <input type="number" asp-for="duration" class="form-control"  required/>
                                        <span asp-validation-for="duration" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>


                            <div class="card-footer">
                                <button type="submit" value="Create" class="btn btn-success" title="Ajouter payement"><i class="fas fa-plus" ></i></button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>



      </div>
  </div>

           






